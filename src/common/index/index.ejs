<!DOCTYPE html>
<html>
	<head>
		<title><?= title ?></title>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
	</head>
	<body>
		<?- include header ?>
		<table class="altrowstable">
			<thead>
				<tr>
					<td>名称</td>
					<td>海报</td>
					<td>主演</td>
					<td>导演</td>
					<td>评分</td>
				</tr>
			</thead>
			<tbody>
				<? if (subjects) { ?>
					<? subjects.forEach(function(item){ ?>
						<tr>
							<td><a href="<?= item.alt ?>" target="_blank"><?= item.title ?></a></td>
							<td><img src="<?= item.images.small ?>"></td>
							<td>
								<? item.casts.forEach(function(cast){ ?>
									<a href="<?= cast.alt ?>" target="_blank"><?= cast.name ?></a>
								<? }); ?>
							</td>
							<td><a href="<?= item.directors[0].alt ?>" target="_blank"><?= item.directors[0].name ?></a></td>
							<td><?= item.rating.average ?></td>
						</tr>
					<? }); ?>
				<? } ?>
			</tbody>
		</table>
		<?- include footer ?>
	</body>
</html>